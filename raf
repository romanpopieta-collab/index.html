    <script type="module">
        import { doc, setDoc, onSnapshot, signInWithCustomToken, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        
        let myShows = [];
        let currentTab = 'watching';
        let currentUser = null;
        const SECRET_KEY = "1234"; // –ó–º—ñ–Ω—ñ—Ç—å —Ü–µ–π –ø–∞—Ä–æ–ª—å

        window.checkPass = () => {
            const val = document.getElementById('passInput').value;
            if (val === SECRET_KEY) {
                document.getElementById('loginOverlay').style.display = 'none';
                document.getElementById('mainContent').classList.remove('opacity-0');
                initApp();
            } else {
                document.getElementById('loginError').classList.remove('hidden');
            }
        };

        async function initApp() {
            const initAuth = async () => {
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(window.auth, __initial_auth_token);
                } else {
                    await signInAnonymously(window.auth);
                }
            };
            await initAuth();

            onAuthStateChanged(window.auth, (user) => {
                if (!user) return;
                currentUser = user;
                
                const docRef = window.doc(window.db, 'artifacts', window.appId, 'users', user.uid, 'data', 'serials');
                onSnapshot(docRef, (docSnap) => {
                    if (docSnap.exists()) {
                        myShows = docSnap.data().list || [];
                        renderGallery();
                    }
                }, (err) => console.error("Firebase Error:", err));
            });
        }

        window.saveToCloud = async () => {
            if (!currentUser) return;
            const docRef = window.doc(window.db, 'artifacts', window.appId, 'users', currentUser.uid, 'data', 'serials');
            await window.setDoc(docRef, { list: myShows });
        };

        window.addShow = async (id) => {
            if (myShows.find(s => s.id === id)) return;
            const res = await fetch(`https://api.tvmaze.com/shows/${id}?embed=episodes`);
            const show = await res.json();
            const newShow = {
                id: show.id,
                name: show.name,
                image: show.image?.medium,
                userStatus: '‚è≥ –£ –ø–ª–∞–Ω–∞—Ö',
                currentEpisodeCount: 0,
                totalEpisodes: show._embedded.episodes.length,
                dateAdded: Date.now(),
                episodes: show._embedded.episodes.map(e => ({ id: e.id, watched: false, name: e.name, season: e.season, number: e.number }))
            };
            myShows.push(newShow);
            await window.saveToCloud();
            document.getElementById('searchResults').classList.add('hidden');
            document.getElementById('searchInput').value = '';
        };

        window.renderGallery = () => {
            const gallery = document.getElementById('gallery');
            let filtered = [...myShows];
            
            if (currentTab === 'watching') filtered = myShows.filter(s => s.userStatus === 'üëÄ –î–∏–≤–ª—é—Å—å');
            else if (currentTab === 'planning') filtered = myShows.filter(s => s.userStatus === '‚è≥ –£ –ø–ª–∞–Ω–∞—Ö');
            else if (currentTab === 'watched') filtered = myShows.filter(s => s.userStatus === '‚úÖ –ü–µ—Ä–µ–≥–ª—è–Ω—É—Ç–æ');

            gallery.innerHTML = filtered.map(s => `
                <div class="card-row glass p-3 rounded-xl flex items-center gap-4 cursor-pointer" onclick="openModal(${s.id})">
                    <img src="${s.image}" class="w-10 h-14 object-cover rounded shadow">
                    <div class="flex-1">
                        <div class="font-bold text-sm text-white">${s.name}</div>
                        <div class="text-[10px] text-blue-400 font-bold uppercase">${s.currentEpisodeCount} / ${s.totalEpisodes} —Å–µ—Ä—ñ–π</div>
                    </div>
                </div>
            `).join('');
        };

        window.setTab = (tab) => {
            currentTab = tab;
            document.querySelectorAll('button[id^="tab-"]').forEach(b => {
                b.classList.replace('border-blue-500', 'border-transparent');
                b.classList.replace('text-blue-500', 'text-gray-500');
            });
            document.getElementById(`tab-${tab}`).classList.replace('border-transparent', 'border-blue-500');
            document.getElementById(`tab-${tab}`).classList.replace('text-gray-500', 'text-blue-500');
            renderGallery();
        };

        const searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('input', async (e) => {
            const q = e.target.value;
            if (q.length < 3) return;
            const res = await fetch(`https://api.tvmaze.com/search/shows?q=${q}`);
            const data = await res.json();
            const results = document.getElementById('searchResults');
            results.innerHTML = data.map(i => `
                <div onclick="addShow(${i.show.id})" class="p-3 hover:bg-white/10 cursor-pointer border-b border-white/5 flex items-center gap-3">
                    <img src="${i.show.image?.medium || ''}" class="w-8 h-10 object-cover rounded">
                    <div class="text-xs font-bold text-white">${i.show.name}</div>
                </div>
            `).join('');
            results.classList.remove('hidden');
        });

        window.openModal = (id) => {
            const show = myShows.find(s => s.id === id);
            if (!show) return;
            const content = document.getElementById('modalContent');
            content.innerHTML = `
                <div class="mb-6">
                    <h2 class="text-2xl font-black text-white mb-2 uppercase tracking-tighter">${show.name}</h2>
                    <div class="flex gap-4 mb-6">
                        <select onchange="updateStatus(${show.id}, this.value)" class="bg-blue-600 px-3 py-1 rounded text-[10px] font-bold uppercase">
                            <option value="üëÄ –î–∏–≤–ª—é—Å—å" ${show.userStatus === 'üëÄ –î–∏–≤–ª—é—Å—å' ? 'selected' : ''}>üëÄ –î–∏–≤–ª—é—Å—å</option>
                            <option value="‚è≥ –£ –ø–ª–∞–Ω–∞—Ö" ${show.userStatus === '‚è≥ –£ –ø–ª–∞–Ω–∞—Ö' ? 'selected
